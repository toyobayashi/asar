{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Windows",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}\\build\\win\\Win32\\Debug\\asarcpp.exe",
      "args": ["p", "-u", "^.*\\.png$", ".\\test\\input\\packthis", "test\\output\\packthis-unpack.asar"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "preLaunchTask": "VC Debug"
    },
    {
      "name": "Linux",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/linux/Debug/asartest",
      "args": [""],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "GCC Debug",
      "miDebuggerPath": "/usr/bin/gdb"
    },
    {
      "name": "macOS",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/darwin/Debug/asartest",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true,
      "MIMode": "lldb",
      "logging": {
        "trace": true,
        "traceResponse": true,
        "engineLogging": true
      },
      "preLaunchTask": "Clang Debug",
    },
    {
      "name": "Windows WSL",
      "type": "cppdbg",
      "request": "launch",
      "program": "${config:wslProjectRoot}/build/linux/Debug/asartest",
      "args": [""],
      "stopAtEntry": false,
      "cwd": "${config:wslProjectRoot}",
      "environment": [],
      "externalConsole": false,
      "windows": {
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb",
        "externalConsole": true,
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      },
      "pipeTransport": {
        "pipeCwd": "",
        "pipeProgram": "c:\\windows\\sysnative\\bash.exe",
        "pipeArgs": [
          "-c"
        ],
        "debuggerPath": "/usr/bin/gdb"
      },
      "sourceFileMap": {
        "/mnt/c": "c:\\",
        "/mnt/d": "d:\\",
        "/mnt/e": "e:\\",
        "/usr": "\\\\wsl$\\Ubuntu\\usr"
      },
      "preLaunchTask": "WSL GCC Debug"
    }
  ]
}
